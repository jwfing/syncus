<!DOCTYPE html>
<html lang="en">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no">

  <!-- Bootstrap Material Design -->
    <link href="/stylesheets/bootstrap-material-design.min.css" rel="stylesheet">
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/ripples.min.css" rel="stylesheet">
    <link href="/stylesheets/style.css" rel="stylesheet">
  <title>SyncUS -- 登录</title>
  <style type="text/css">
      .panel-footer .row {
        margin-top: -10px;
        max-height: 40px
      }
      .panel-footer .row .form {
        max-height: 35px
      }
      .footer {
        bottom: 0;
        width: 100%;
        height: 40px;
      }
      .font-logo{
        font-family:radikal,"Helvetica Neue",Helvetica,"PingFang SC","Microsoft Yahei","WenQuanYi Micro Hei",Arial,Verdana,sans-serif;
        font-weight:400
      }

    </style>
  <script type="text/javascript" src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
  <script type="text/javascript">

    function badluck(){
      username = document.getElementById('username').value;
      if ( username ){
        $.post( "badluck", { username: username } ).done(function(){
          alert('提交成功');
        }).fail(function (response){
          alert( response.responseText );
        });
      } else {
        alert('用户邮箱为空，请先填写邮箱');
      }
    }

  </script>
</head>
<body>

  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-3">
        <!-- .row -->
        <div class="row">
          <div class="col-md-12">
            <form action="/login" method="post" class="form-signin" role="form">
              <h2 class="font-logo text-center">用户登录</h2>

              <% if (info.length > 0) { %>
                <div class="alert alert-dismissible alert-info">
                  <button type="button" class="close" data-dismiss="alert">×</button>
                  <% for (var i = 0; i < info.length; i++) { %>
                    <p><%= info[i] %></p>
                  <% } %>
                </div>
              <% } %>
              <% if (errors.length > 0) { %>
                <div class="alert alert-dismissible alert-warning">
                  <button type="button" class="close" data-dismiss="alert">×</button>
                  <% for (var i = 0; i < errors.length; i++) { %>
                    <p><%= errors[i] %></p>
                  <% } %>
                </div>
              <% } %>

              <div class="form-group">
                <label for="username" class="sr-only">Email</label>
                <input type="email" class="form-control" id="username" name="username" placeholder="Email" required autofocus>
              </div>
              <div class="form-group">
                <label for="password" class="sr-only">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
              </div>
              <!-- .form-group -->
              <p><button class="btn btn-lg btn-primary btn-block" type="submit">登录</button></p>
            </form>
          </div>
          <!-- .col-md-12 -->
        </div>
        <!-- .row -->

        <div class="row">
          <div class="col-md-12">
            <p class="text-center"><a href="/register" >没帐号？先注册</a> 或 <a onclick="badluck(); return false">输入用户名，点此重置密码</a></p>
          </div>
          <!-- .col-md-12 -->
        </div>
        <!-- .row -->
      </div>
      <!-- .col-md-4 col-md-offset-4 -->
    </div>
    <!-- .row -->

  </div> <!-- /container -->
    <footer class="footer">
      <div class="container-fluid">
        <div class="col-md-4">
          <a href="https://github.com/jwfing/syncus"></i>Project Source</a>
        </div>
        <div class="col-md-4">
          <a href="https://github.com/jwfing/todo_ntp">Chrome Extension Source</a>
        </div>
        <div class="col-md-4">
          <p class="text-muted" style="text-align: right;padding-right: 50px">powered by <a href="https://leancloud.cn" class="logo font-logo">LeanCloud</a></p>
        </div>
      </div>
    </footer>
</body>
