  <title>SyncUS -- 注册</title>
</head>
<body>

  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-3">

        <div class="row">
          <div class="col-md-12">
            <form action="/register" method="post" class="form-signin" role="form">
              <h2 class="font-logo text-center">账户注册</h2>

              <% if (errors.length > 0) { %>
                <div class="alert alert-dismissible alert-warning">
                  <button type="button" class="close" data-dismiss="alert">×</button>
                  <% for (var i = 0; i < errors.length; i++) { %>
                    <p><%= errors[i] %></p>
                  <% } %>
                </div>
              <% } %>

              <div class="form-group">
                <label for="username" class="sr-only">Email</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Email" required autofocus>
              </div>
              <!-- .form-group -->
              <div class="form-group">
                <label for="password" class="sr-only">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
              </div>
              <!-- .form-group -->
              <div class="form-group">
                <label for="repeat_password" class="sr-only">Repeat Password</label>
                <input type="password" class="form-control" id="repeat_password" name="repeat_password" placeholder="Repeat Password" required>
              </div>
              <!-- .form-group -->
              <p><button class="btn btn-lg btn-primary btn-block" type="submit">注册</button></p>
            </form>
          </div>
          <!-- .col-md-12 -->
        </div>
        <!-- .row -->

        <div class="row">
          <div class="col-md-12">
            <p class="text-center"><a href="/login">已有帐号？点击登录</a></p>
          </div>
          <!-- .col-md-12 -->
        </div>
        <!-- .row -->
      </div>
      <!-- .col-md-4 col-md-offset-4 -->
    </div>
    <!-- .row -->


  </div> <!-- /container -->
    <footer class="footer">
      <div class="container-fluid">
        <div class="col-md-4">
